<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to "Following", user_relationship_path(user_id: user.id, id: current_user.id), id: "unfollow-button", class: 'btn btn-default btn-success btn-unfollow', method: :delete, remote: true %>
  <% else %>
    <%= link_to "Follow", user_relationships_path(user.id), id: "follow-button", class: 'btn btn-default btn-follow', method: :post, remote: true %>
  <% end %>
<% end %>