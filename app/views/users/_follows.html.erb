<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to "Following", user_relationship_path(user_id: user.id, id: current_user.id), id: "btn-unfollow", class: 'btn btn-default btn-success', method: :delete, remote: true %>
  <% else %>
    <%= link_to "Follow", user_relationships_path(user.id), id: "btn-follow", class: 'btn btn-default', method: :post, remote: true %>
  <% end %>
<% end %>